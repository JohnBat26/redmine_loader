<% html_title "Exony Project File Loader" -%>
<%= content_tag :p do %>
  <%= content_tag :label, 'Mark issues as private by default' %>
  <%= check_box_tag "settings[is_private_by_default]", 1, Setting[:plugin_redmine_loader][:is_private_by_default] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, 'Alias for Tracker field' %>
  <%= text_field_tag 'settings[tracker_alias]', @settings['tracker_alias'] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, 'Max number of tasks to immediately import' %>
  <%= number_field_tag 'settings[instant_import_tasks]', @settings['instant_import_tasks'], :in => 10..100, :step => 5 %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, 'Tracker for project files' %>
  <%= select_tag "settings[tracker_id]", options_from_collection_for_select(Tracker.all, :id, :name, :selected => @settings['tracker_id']) %>
<% end %>
